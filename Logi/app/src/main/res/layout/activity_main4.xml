<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/cream">

  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
      android:id="@+id/nestedScrollView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <!-- Add your scrollable content here -->

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="414dp"
          android:layout_height="244dp"
          android:layout_marginBottom="1000dp"
          android:background="@drawable/home"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="237dp"
          android:layout_height="22dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.102"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.323"
          app:srcCompat="@drawable/recent" />

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="274dp"
          android:layout_height="228.74dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.495"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.428"
          app:srcCompat="@drawable/event1" />

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="274dp"
          android:layout_height="228.74dp"
          android:layout_marginBottom="328dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.495"

          app:layout_constraintStart_toStartOf="parent"
          app:srcCompat="@drawable/event2" />

      <ImageView
          android:id="@+id/google"
          android:layout_width="274dp"
          android:layout_height="228.74dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.495"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.923"
          app:srcCompat="@drawable/event3" />

      <HorizontalScrollView
          android:id="@+id/horizontalScrollView"
          android:layout_width="373dp"
          android:layout_height="129dp"
          android:fillViewport="true"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.227">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:scrollbarThumbHorizontal="@color/cream"
            android:scrollbarTrackHorizontal="@color/cream">

          <ImageButton
              android:id="@+id/imageview1"
              android:layout_width="106dp"
              android:layout_height="111dp"
              android:layout_margin="10dp"
              android:layout_weight="0"
              android:background="@drawable/bmap" />

          <ImageButton
              android:id="@+id/bambooBazaar"
              android:layout_width="106dp"
              android:layout_height="111dp"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:background="@drawable/bbaz" />

          <ImageButton
              android:id="@+id/events"
              android:layout_width="106dp"
              android:layout_height="111dp"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:background="@drawable/events" />

          <ImageButton
              android:id="@+id/imageview4"
              android:layout_width="106dp"
              android:layout_height="111dp"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:background="@drawable/pion" />
        </LinearLayout>
      </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.core.widget.NestedScrollView>

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottom_navigation"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="bottom"
      android:background="@color/Green"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintVertical_bias="0.671"
      app:menu="@menu/bottom_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
