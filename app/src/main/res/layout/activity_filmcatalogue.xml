<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Add your scrollable content here -->


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="402dp"
                android:layout_height="131dp"
                android:layout_marginBottom="610dp"
                android:background="@drawable/frame"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/imageButton17"
                android:layout_width="29dp"
                android:layout_height="30dp"
                android:background="@color/trans"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.071"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068"
                app:srcCompat="@drawable/back_button" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Film Catalogue"
                android:textColor="#134615"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.51" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="378dp"
                android:layout_height="153dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageButton
                    android:id="@+id/imageview1"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fim1"
                    android:onClick="bamboothetradition" />

                <ImageButton
                    android:id="@+id/imageview2"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/film2"
                    android:onClick="bukidnon" />

                <ImageButton
                    android:id="@+id/imageview3"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/film3"
                    android:onClick="bambootheindustry" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="106dp"
                android:layout_height="55dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bamboo - The Tradition of the Future"
                android:textAlignment="center"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="127dp"
                android:layout_height="47dp"
                android:layout_marginTop="152dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="BAMBOO - The industry of the future, now"
                android:textAlignment="center"
                android:textSize="10.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.947"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bukidnon Giant Bamboo Resources Corporation"
                android:textAlignment="center"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.479"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="378dp"
                android:layout_height="153dp"
                android:layout_marginTop="200dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageButton
                    android:id="@+id/imageview4"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/film4"
                    android:onClick="aguidetobamboo" />

                <ImageButton
                    android:id="@+id/imageview5"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/film5"
                    android:onClick="ironbamboo" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="114dp"
                android:layout_height="53dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="A Guide to Bamboo Production and Planting"
                android:textAlignment="center"
                android:textSize="10.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.035"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="108dp"
                android:layout_height="61dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Iron Bamboo Farming in the Philippines"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>