<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Add your scrollable content here -->


            <TextView
                android:id="@+id/textView7"
                android:layout_width="117dp"
                android:layout_height="56dp"
                android:layout_marginTop="380dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Training Manual of Bamboo Charcoal for Producers and Consumers"
                android:textAlignment="center"
                android:textSize="9.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.028"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="402dp"
                android:layout_height="131dp"
                android:layout_marginBottom="610dp"
                android:background="@drawable/frame"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/imageButton13"
                android:layout_width="29dp"
                android:layout_height="30dp"
                android:background="@color/trans"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068"
                app:srcCompat="@drawable/back_button" />

            <TextView
                android:id="@+id/textView90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Book Catalogue"
                android:textColor="#134615"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.51" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="378dp"
                android:layout_height="153dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageButton
                    android:id="@+id/imageview1"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/bamboo"
                    android:onClick="bamboo"/>

                <ImageButton
                    android:id="@+id/sustainablebambooid"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/sustainablebamboo"
                    android:onClick="sustainablebamboo1234" />

                <ImageButton
                    android:id="@+id/imageview3"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:onClick="bambooandsustainble"
                    android:background="@drawable/bambooandsustainable" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bamboo"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.114"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginTop="152dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bamboo and Sustainable Construction"
                android:textAlignment="center"
                android:textSize="9.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.974"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="135dp"
                android:layout_height="36dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Sustainable Bamboo Development"
                android:textAlignment="center"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="378dp"
                android:layout_height="153dp"
                android:layout_marginTop="192dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageButton
                    android:id="@+id/imageview4"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:onClick="advancesinbamboo"
                    android:background="@drawable/advancesinbamboo" />

                <ImageButton
                    android:id="@+id/imageview5"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:onClick="bamboofibres"
                    android:background="@drawable/bamboofibres" />

                <ImageButton
                    android:id="@+id/imageview6"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:onClick="bamboounveiled"
                    android:background="@drawable/bamboounveiled" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="114dp"
                android:layout_height="35dp"
                android:layout_marginTop="192dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Advances in Bamboo Sciences"
                android:textAlignment="center"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.039"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="129dp"
                android:layout_height="43dp"
                android:layout_marginTop="192dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bamboo Fibres Processing, Properties and Applications"
                android:textAlignment="center"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="112dp"
                android:layout_height="42dp"
                android:layout_marginTop="192dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bamboo Unveiled: Exploring Nature's Versatile"
                android:textAlignment="center"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.943"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="378dp"
                android:layout_height="153dp"
                android:layout_marginTop="380dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageButton
                    android:id="@+id/imageview7"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:onClick="trainingmanual"
                    android:background="@drawable/trainingmanual" />

                <ImageButton
                    android:id="@+id/imageview8"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:onClick="buildingbamboo"
                    android:background="@drawable/buildingbamboo" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="105dp"
                android:layout_height="69dp"
                android:layout_marginTop="380dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Building Bamboo Bridges: Bridge of Coquiyo"
                android:textAlignment="center"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>