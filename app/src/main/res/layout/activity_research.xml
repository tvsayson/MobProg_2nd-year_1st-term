                    android:layout_height="146dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/bookpic"
                    android:onClick="bambootechnoguide" />

                <ImageButton
                    android:id="@+id/imageview3"
                    android:layout_width="106dp"
                    android:layout_height="146dp"
                    android:layout_margin="10dp"
